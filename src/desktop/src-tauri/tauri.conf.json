{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Gourmet Client",
  "version": "0.0.2",
  "identifier": "dev.radaiko.gourmetclient",
  "build": {
    "beforeDevCommand": "cd ../app && npx expo start --web --port 8081",
    "beforeBuildCommand": "cd ../app && npx expo export -p web",
    "devUrl": "http://localhost:8081",
    "frontendDist": "../../app/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Gourmet Client",
        "width": 420,
        "height": 800,
        "resizable": true,
        "minWidth": 360,
        "minHeight": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
