<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0-ios26.0</TargetFramework>
        <SupportedOSPlatformVersion>13.0</SupportedOSPlatformVersion>
        <Nullable>enable</Nullable>
        <RootNamespace>GC.iOS</RootNamespace>
        <!-- For quicker builds -->
        <UseInterpreter>true</UseInterpreter>
        <PublishTrimmed>true</PublishTrimmed>
    </PropertyGroup>

    <!-- iOS specific properties -->
    <PropertyGroup Condition="'$(TargetFramework)' == 'net9.0-ios26.0'">
        <SupportedOSPlatformVersion>13.0</SupportedOSPlatformVersion>
        <NoWarn>$(NoWarn);XCODE_26_0_PREVIEW</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia.iOS" Version="$(AvaloniaVersion)"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\GC.Frontend.Mobile\GC.Frontend.Mobile.csproj" />
        <ProjectReference Include="..\GC.Frontend\GC.Frontend.csproj"/>
    </ItemGroup>
</Project>
