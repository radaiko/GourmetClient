<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GC.Frontend.Mobile.Controls.Group"
             x:Name="Root">
    <Border Margin="0,0,0,10" BackgroundColor="Transparent">
        <VerticalStackLayout Spacing="4">
            <Label Text="{Binding Header, Source={x:Reference Root}}" Style="{DynamicResource TertiaryLabel}" />
           <!-- diagnostic: make the separator label explicit so we can see if it's being rendered -->
           <Label x:Name="DiagSep" AutomationId="DiagSep" Text="DIAG-SEP" BackgroundColor="Yellow" TextColor="Black" FontSize="20" HeightRequest="30" HorizontalOptions="Fill" VerticalOptions="Start" Margin="0,4,0,8" />
            <ContentPresenter Content="{Binding Content, Source={x:Reference Root}}" />
        </VerticalStackLayout>
        
    </Border>
</ContentView>