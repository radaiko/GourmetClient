<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GC.Frontend.Mobile.Controls.Group"
             x:Name="Root">
    <VerticalStackLayout>
        <Label Text="{Binding Header, Source={x:Reference Root}}" Style="{DynamicResource GroupHeaderLabel }" />
        <Border>
            <VerticalStackLayout Spacing="8">
                <ContentView />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentView>