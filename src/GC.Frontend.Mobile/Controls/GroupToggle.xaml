<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GC.Frontend.Mobile.Controls.GroupToggle">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Grid HorizontalOptions="FillAndExpand" MaximumHeightRequest="{StaticResource DefaultHeight}">
                <Label Text="{TemplateBinding Label}" VerticalOptions="Center" />
                <Switch IsToggled="{TemplateBinding Toggle, Mode=TwoWay}" HorizontalOptions="End" />
            </Grid>
            
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>