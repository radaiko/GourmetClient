<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    


    <!-- Apple predefined colors (iOS-like semantic palette) -->
    <!-- Light / Dark pairs follow Apple's semantic style: label, secondary/tertiary/quaternary, system fills, backgrounds, separators and links. -->

    <Color x:Key="LightLabelColor">#000000</Color>
    <Color x:Key="DarkLabelColor">#FFFFFFFF</Color>

    <!-- Secondary/tertiary/quaternary label colors: corrected to AARRGGBB (alpha first) -->
    <Color x:Key="LightSecondaryLabelColor">#99000000</Color>
    <Color x:Key="DarkSecondaryLabelColor">#99FFFFFF</Color>

    <Color x:Key="LightTertiaryLabelColor">#66000000</Color>
    <Color x:Key="DarkTertiaryLabelColor">#66FFFFFF</Color>

    <Color x:Key="LightQuaternaryLabelColor">#33000000</Color>
    <Color x:Key="DarkQuaternaryLabelColor">#33FFFFFF</Color>

    <!-- System fill colors (alpha moved to front) -->
    <Color x:Key="LightSystemFillColor">#33787880</Color>
    <Color x:Key="DarkSystemFillColor">#5C767680</Color>

    <Color x:Key="LightSecondarySystemFillColor">#29787880</Color>
    <Color x:Key="DarkSecondarySystemFillColor">#52767680</Color>

    <Color x:Key="LightTertiarySystemFillColor">#1F767680</Color>
    <Color x:Key="DarkTertiarySystemFillColor">#3D767680</Color>

    <Color x:Key="LightQuaternarySystemFillColor">#14747480</Color>
    <Color x:Key="DarkQuaternarySystemFillColor">#2E747480</Color>

    <!-- Placeholder text (alpha-first) -->
    <Color x:Key="LightPlaceholderTextColor">#40000000</Color>
    <Color x:Key="DarkPlaceholderTextColor">#40FFFFFF</Color>

    <!-- System backgrounds -->
    <Color x:Key="LightSystemBackgroundColor">#FFFFFF</Color>
    <Color x:Key="DarkSystemBackgroundColor">#000000</Color>

    <Color x:Key="LightSecondarySystemBackgroundColor">#F2F2F7</Color> <!-- iOS light grouped background tone -->
    <Color x:Key="DarkSecondarySystemBackgroundColor">#1C1C1E</Color>

    <Color x:Key="LightTertiarySystemBackgroundColor">#FFFFFF</Color>
    <Color x:Key="DarkTertiarySystemBackgroundColor">#2C2C2E</Color>

    <Color x:Key="LightSystemGroupedBackgroundColor">#F2F2F7</Color>
    <Color x:Key="DarkSystemGroupedBackgroundColor">#1C1C1E</Color>

    <Color x:Key="LightSecondarySystemGroupedBackgroundColor">#FFFFFF</Color>
    <Color x:Key="DarkSecondarySystemGroupedBackgroundColor">#1C1C1E</Color>

    <Color x:Key="LightTertiarySystemGroupedBackgroundColor">#F2F2F7</Color>
    <Color x:Key="DarkTertiarySystemGroupedBackgroundColor">#2C2C2E</Color>

    <!-- Separators: light = pale gray, dark = darker gray (consistent with iOS separators) -->
    <Color x:Key="LightSeparatorColor">#C6C6C8</Color>
    <Color x:Key="DarkSeparatorColor">#38383A</Color>

    <Color x:Key="LightSeparatorColorStandard">#C6C6C8</Color>
    <Color x:Key="DarkSeparatorColorStandard">#38383A</Color>
    <Color x:Key="LightOpaqueSeparatorColor">#C6C6C8</Color>
    <Color x:Key="DarkOpaqueSeparatorColor">#38383A</Color>

    <!-- System/link color (system blue) -->
    <Color x:Key="LightLinkColor">#007AFF</Color>
    <Color x:Key="DarkLinkColor">#0A84FF</Color>

    <!-- Switch -->
    <Color x:Key="SwitchColor">#30D158</Color>
    <Color x:Key="SwitchThumbColor">#FFF</Color>
    

    <!-- Predefined values for consistent theming -->
    <x:Double x:Key="DefaultFontSize">15</x:Double>
    <x:Double x:Key="SecondaryFontSize">13</x:Double>
    <x:Double x:Key="TertiaryFontSize">11</x:Double>
    <x:Double x:Key="DefaultCornerRadius">16</x:Double>
    <Thickness x:Key="ButtonPadding">0</Thickness>
    <Thickness x:Key="InputPadding">8</Thickness>
    <Thickness x:Key="GroupPadding">16</Thickness>

    <!-- DataTemplates for CollectionView headers and footers -->
    <DataTemplate x:Key="CollectionViewHeaderTemplate">
        <Label Text="{Binding}" HorizontalTextAlignment="Start" FontSize="{StaticResource TertiaryFontSize}" TextColor="{AppThemeBinding Light={StaticResource LightTertiaryLabelColor}, Dark={StaticResource DarkTertiaryLabelColor}}" />
    </DataTemplate>
    <DataTemplate x:Key="CollectionViewFooterTemplate">
        <Label Text="{Binding}" HorizontalTextAlignment="Start" FontSize="{StaticResource TertiaryFontSize}" TextColor="{AppThemeBinding Light={StaticResource LightTertiaryLabelColor}, Dark={StaticResource DarkTertiaryLabelColor}}" />
    </DataTemplate>

    <!-- Apple-inspired styles for Maui controls -->
    <!-- These styles provide Apple-inspired theming for Maui controls based on UIKit guidelines.
         These are implicit styles that apply automatically to all controls of the TargetType when this ResourceDictionary is merged into the app's resources.
         Ensure the Apple.xaml ResourceDictionary is included in your app's MergedDictionaries. -->
    
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightLabelColor}, Dark={StaticResource DarkLabelColor}}" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
    </Style>
    
    <Style TargetType="Label" x:Key="SecondaryLabel">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightSecondaryLabelColor}, Dark={StaticResource DarkSecondaryLabelColor}}" />
        <Setter Property="FontSize" Value="{StaticResource SecondaryFontSize}" />
    </Style>
    
    <Style TargetType="Label" x:Key="TertiaryLabel">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTertiaryLabelColor}, Dark={StaticResource DarkTertiaryLabelColor}}" />
        <Setter Property="FontSize" Value="{StaticResource TertiaryFontSize}" />
    </Style>
    
    <Style TargetType="Label" x:Key="QuaternaryLabel">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightQuaternaryLabelColor}, Dark={StaticResource DarkQuaternaryLabelColor}}" />
        <Setter Property="FontSize" Value="{StaticResource TertiaryFontSize}" />
    </Style>
    
    <Style TargetType="Label" x:Key="GroupHeaderLabel">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightQuaternaryLabelColor}, Dark={StaticResource DarkQuaternaryLabelColor}}" />
        <Setter Property="FontSize" Value="{StaticResource TertiaryFontSize}" />
    </Style>
    
    <Style TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSystemGroupedBackgroundColor}, Dark={StaticResource DarkSystemGroupedBackgroundColor}}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="{StaticResource DefaultCornerRadius}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="{StaticResource GroupPadding}" />
    </Style>
    
    <Style TargetType="BoxView" x:Key="Separator">
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSeparatorColor}, Dark={StaticResource DarkSeparatorColor}}" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Margin" Value="0,8" />
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightLinkColor}, Dark={StaticResource DarkLinkColor}}" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        <Setter Property="CornerRadius" Value="{StaticResource DefaultCornerRadius}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="Padding" Value="{StaticResource ButtonPadding}" />
    </Style>
    
    <Style TargetType="Button" x:Key="FilledButton">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightLinkColor}, Dark={StaticResource DarkLinkColor}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightSystemBackgroundColor}, Dark={StaticResource DarkSystemBackgroundColor}}" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        <Setter Property="CornerRadius" Value="{StaticResource DefaultCornerRadius}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="Padding" Value="{StaticResource ButtonPadding}" />
    </Style>
    
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSecondarySystemBackgroundColor}, Dark={StaticResource DarkSecondarySystemBackgroundColor}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightLabelColor}, Dark={StaticResource DarkLabelColor}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightPlaceholderTextColor}, Dark={StaticResource DarkPlaceholderTextColor}}" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
    </Style>
    
    <Style TargetType="Editor">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSecondarySystemBackgroundColor}, Dark={StaticResource DarkSecondarySystemBackgroundColor}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightLabelColor}, Dark={StaticResource DarkLabelColor}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightPlaceholderTextColor}, Dark={StaticResource DarkPlaceholderTextColor}}" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
    </Style>
    
    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSecondarySystemBackgroundColor}, Dark={StaticResource DarkSecondarySystemBackgroundColor}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightLabelColor}, Dark={StaticResource DarkLabelColor}}" />
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
    </Style>
    
    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource SwitchColor}" />
        <Setter Property="ThumbColor" Value="{StaticResource SwitchThumbColor}" />
    </Style>
    
    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{AppThemeBinding Light={StaticResource LightLinkColor}, Dark={StaticResource DarkLinkColor}}" />
        <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Light={StaticResource LightSystemFillColor}, Dark={StaticResource DarkSystemFillColor}}" />
        <Setter Property="ThumbColor" Value="{AppThemeBinding Light={StaticResource LightLinkColor}, Dark={StaticResource DarkLinkColor}}" />
    </Style>
    
    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{AppThemeBinding Light={StaticResource LightLinkColor}, Dark={StaticResource DarkLinkColor}}" />
    </Style>
    
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource LightLinkColor}, Dark={StaticResource DarkLinkColor}}" />
    </Style>
    
    <Style TargetType="VerticalStackLayout">
        <Setter Property="Spacing" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>
    
</ResourceDictionary>