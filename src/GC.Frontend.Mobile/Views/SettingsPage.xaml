<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctx="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:GC.Frontend.ViewModels;assembly=GC.Frontend"
    xmlns:controls="clr-namespace:GC.Frontend.Mobile.Controls"
    x:Class="GC.Frontend.Mobile.Views.SettingsPage"
    x:DataType="vm:SettingsViewModel">

    <ContentPage.BindingContext>
        <vm:SettingsViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="0">
            <Label Text="Gourmet" />
            <Border>
                <VerticalStackLayout Spacing="0">
                    <Entry Placeholder="Username" Text="{Binding Settings.GourmetUsername}" />
                    <controls:Seperator />
                    <Entry Placeholder="Password" IsPassword="True" Text="{Binding Settings.GourmetPassword}" />
                </VerticalStackLayout>
            </Border>
            <Label Text="Ventopay" />
            <Border>
                <VerticalStackLayout Spacing="0">
                    <Entry Placeholder="Username" Text="{Binding Settings.VentoUsername}" />
                    <controls:Seperator />
                    <Entry Placeholder="Password" IsPassword="True" Text="{Binding Settings.VentoPassword}" />
                </VerticalStackLayout>
            </Border>
            <Label Text="Allgemein" />
            <Border>
                <VerticalStackLayout Spacing="0">
                    <Grid ColumnDefinitions="*,Auto" HorizontalOptions="FillAndExpand">
                        <Label Text="Debug Mode" Grid.Column="0" VerticalOptions="Center" />
                        <Switch IsToggled="{Binding Settings.DebugMode}" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
