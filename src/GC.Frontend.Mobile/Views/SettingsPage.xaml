<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:GC.Frontend.ViewModels;assembly=GC.Frontend"
    xmlns:controls="clr-namespace:GC.Frontend.Mobile.Controls"
    x:Class="GC.Frontend.Mobile.Views.SettingsPage"
    x:DataType="vm:SettingsViewModel"
    x:Name="RootPage">

    <ContentPage.BindingContext>
        <vm:SettingsViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="0">
            <controls:Group Header="Gourmet">
                <VerticalStackLayout Spacing="0">
                    <Entry Placeholder="Benutzername" Text="{Binding GourmetUsername, Mode=TwoWay}" />
                    <Entry Placeholder="Password" IsPassword="True" Text="{Binding GourmetPassword, Mode=TwoWay}" />
                </VerticalStackLayout>
            </controls:Group>
            <controls:Group Header="Ventopay">
                <VerticalStackLayout Spacing="0">
                    <Entry Placeholder="Benutzername" Text="{Binding VentoUsername, Mode=TwoWay}" />
                    <Entry Placeholder="Password" IsPassword="True" Text="{Binding VentoPassword, Mode=TwoWay}" />
                </VerticalStackLayout>
            </controls:Group>
            <controls:Group Header="Allgemein">
                <Grid HorizontalOptions="FillAndExpand">
                    <Label Text="Debug Mode" VerticalOptions="Center" />
                    <Switch IsToggled="{Binding DebugMode, Mode=TwoWay}" HorizontalOptions="End" />
                </Grid>
            </controls:Group>
           

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
