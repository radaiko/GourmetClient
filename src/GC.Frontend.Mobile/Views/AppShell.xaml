<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GC.Frontend.Mobile.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GC.Frontend.Mobile.Views"
    xmlns:vm="clr-namespace:GC.Frontend.ViewModels;assembly=GC.Frontend"
    FlyoutBehavior="Disabled">

    <Shell.BindingContext>
        <vm:MainViewModel />
    </Shell.BindingContext>

    <TabBar>
        <Tab Title="Bestellen"
             Icon="{AppThemeBinding Light='order_light_24.png', Dark='order_dark_24.png'}">
            <ShellContent ContentTemplate="{DataTemplate views:MenuPage}" />
        </Tab>
        <Tab Title="Abrechnung"
             Icon="{AppThemeBinding Light='billing_light_24.png', Dark='billing_dark_24.png'}">
            <ShellContent ContentTemplate="{DataTemplate views:BillingPage}" />
        </Tab>
        <Tab x:Name="SettingsTab" Title="Einstellungen"
             Icon="{AppThemeBinding Light='settings_light_24.png', Dark='settings_dark_24.png'}">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>